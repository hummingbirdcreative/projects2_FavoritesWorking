<%- include('../partials/head') %>

<section class="vh-100" style="background-color: black;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0" style="margin-bottom: 5px;">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://i.imgur.com/VW7ueS2.png"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; padding-top: 125px; padding-left: 20px;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
                   
                    <% if(err) { %>
                        <p style="color: red; margin: 1rem">
                            <%= err %>
                        </p>
                        <% } %>
  
                  <form action="/users/profile/edit?_method=PUT" method="POST">
  
                    <div class="d-flex align-items-center mb-0 pb-0">
                      <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                      <span class="h1 fw-bold mb-0" style="margin-left: -20px; font-family: 'Covered By Your Grace', cursive; font-size: 70px">Wardrobe</span>
                    </div>
  
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Edit Your Account</h5>

                    <div class="form-outline mb-4">
                        <input type="name" name="name" value="<%= user.name %>" class="form-control form-control-lg" autofocus required/>
                        <label class="form-label" for="name">Name</label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input type="email" name="email" value="<%= user.email %>" class="form-control form-control-lg" required/>
                      <label class="form-label" for="email">Email address</label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input type="password" name="password" class="form-control form-control-lg" required/>
                      <label class="form-label" for="password">Password</label>
                    </div>
  
                    <div class="pt-1 mb-4">
                      <input class="button btn btn-dark btn-lg btn-block" type="submit" value="Save">
                      <a href="/users/profile" style="color: #393f81;">Go Back</a>
                    </div>
                   

                    <form action="/users/profile?_method=DELETE" method="POST">
                        <input style="width: fit-content;" class="button" type="submit" id="delete-profile" value="Delete Profile"> 
                        <label for="confirm">Are you sure? Check box to confirm.</label>
                        <input type="checkbox" name="confirm" id="confirm" required> 
                        <p style="color: red; text-align: center; margin-bottom: 1rem;">CAUTION! CANNOT BE UNDONE!</p>
                    </form>
  
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>